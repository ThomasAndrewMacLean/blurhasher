{

    "steps": [{
            "name": "gcr.io/cloud-builders/docker",
            "args": [
                "build",
                "-t",
                "gcr.io/blurhasher/latest",
                "."
            ]
        },
        {
            "name": "gcr.io/cloud-builders/docker",
            "args": [
                "push",
                "gcr.io/blurhasher/latest"
            ]
        },
        {
            "name": "gcr.io/cloud-builders/gcloud",
            "args": [
                "beta",
                "run",
                "deploy",
                "staging",
                "--image",
                "gcr.io/blurhasher/latest",
                "--region",
                "europe-west1",
                "--platform",
                "managed",
                "--allow-unauthenticated"
            ]
        }
    ],
    "images": [
        "gcr.io/blurhasher/latest"
    ]
}